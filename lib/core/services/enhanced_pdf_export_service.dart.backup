      print('🖨️ [PDF] Páginas criadas: ${pages.length} páginas');

      print('🖨️ [PDF] Adicionando páginas ao PDF...');
      for (int i = 0; i < pages.length; i++) {
        print('🖨️ [PDF] Adicionando página ${i + 1}/${pages.length}');
        pdf.addPage(
          pw.Page(
